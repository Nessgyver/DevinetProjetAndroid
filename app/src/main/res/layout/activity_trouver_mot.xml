<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TrouverMotActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_mot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_search"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/tv_reponse_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:text="X"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_reponse_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/tv_reponse_1"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:text="X"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_reponse_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/tv_reponse_2"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:text="X"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_reponse_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/tv_reponse_3"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:text="X"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_reponse_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/tv_reponse_4"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:text="X"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_reponse_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/tv_reponse_5"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:text="X"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibtn_effacer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/img_mot"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_erase"
        />

    <Button
        android:id="@+id/btn_reponse_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reponse_1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="X"
        android:onClick="onClickAjouterLettre"
        />

    <Button
        android:id="@+id/btn_reponse_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn_reponse_1"
        app:layout_constraintTop_toBottomOf="@id/btn_reponse_1"
        android:text="X"
        android:onClick="onClickAjouterLettre"
        />

    <Button
        android:id="@+id/btn_reponse_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn_reponse_2"
        app:layout_constraintBottom_toTopOf="@id/btn_reponse_2"
        android:text="X"
        android:onClick="onClickAjouterLettre"
        />

    <Button
        android:id="@+id/btn_reponse_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn_reponse_3"
        app:layout_constraintTop_toBottomOf="@id/btn_reponse_3"
        android:text="X"
        android:onClick="onClickAjouterLettre"
        />

    <Button
        android:id="@+id/btn_reponse_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn_reponse_4"
        app:layout_constraintBottom_toTopOf="@id/btn_reponse_4"
        android:text="X"
        android:onClick="onClickAjouterLettre"
        />

    <Button
        android:id="@+id/btn_reponse_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn_reponse_5"
        app:layout_constraintTop_toBottomOf="@id/btn_reponse_5"
        android:text="X"
        android:onClick="onClickAjouterLettre"
        />

    <Button
        android:id="@+id/btn_passer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_valider"
        android:onClick="onClickPasser"
        />

    <Button
        android:id="@+id/btn_valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_tick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toRightOf="@id/btn_passer"
        android:onClick="onClickValider"
        />
</androidx.constraintlayout.widget.ConstraintLayout>